<p>Super creative tagline goes here</p>

{% set campaign = campaignSlug or (campaign | slug) %}
{% set sections = ["locations","sessions","items","npcs","lore","maps","general","characters"] %}

<section class="cards">
  {% for s in sections %}
    {% set count = (collections.public_content or [])
      | byCampaign(campaign)
      | where("data.section", s)
      | length %}

    <article class="card">
      <h3>
        <a href="/vault/campaigns/{{ campaign }}/{{ s }}/">{{ s | capitalize }}</a>
      </h3>
      <p class="muted">
        {{ count }} {{ count == 1 ? "entry" : "entries" }}
      </p>
    </article>
  {% endfor %}
</section>
