<style>
  /* Grid: 1 col on mobile, 2 cols on wide screens */
  .pdf-grid {
    display: grid;
    gap: 1.25rem;
    grid-template-columns: 1fr;
  }
  @media (min-width: 900px) {
    .pdf-grid { grid-template-columns: 1fr 1fr; }
  }

  .pdf-card {
    position: relative;
    border: 1px solid #e4e4e4;
    border-radius: 12px;
    padding: 1rem;
    background: #fff;
  }

  /* (Optional) Full-bleed cards on small screens so PDFs aren’t “narrow” */
  @media (max-width: 700px) {
    .pdf-card {
      margin-left: calc(50% - 50vw);
      margin-right: calc(50% - 50vw);
      border-radius: 0;
      border-left: 0;
      border-right: 0;
      padding-left: 0.75rem;
      padding-right: 0.75rem;
    }
  }

  .pdf-title {
    margin: 0 0 .5rem 0;
    font-size: 1.1rem;
  }

  /* Container just for the PDF area */
  .pdf-view { position: relative; }

  /* The embedded PDF */
  .pdf-frame {
    width: 100%;
    height: clamp(360px, 60vh, 820px);
    border: 0;
    border-radius: 8px;
    background: #f6f6f6;
    position: relative;
    z-index: 1;
  }
  @media (max-width: 700px) {
    .pdf-frame { height: clamp(320px, 58vh, 640px); border-radius: 6px; }
  }

  /* Invisible link over the PDF (no underline, no stray line) */
  .pdf-cover {
    position: absolute;
    inset: 0;
    z-index: 2;
    display: block;
    text-decoration: none;
  }

  .pdf-fallback {
    background: #f8f8f8;
    padding: .75rem;
    border-radius: 8px;
    margin-top: .75rem;
  }
</style>

<p>Tap/click a PDF to open it in a new tab. Use the browser’s controls there to download.</p>

<div class="pdf-grid">
  {% for doc in pdfs %}
    <section class="pdf-card">
      <h2 class="pdf-title">{{ doc.label }}</h2>

      <div class="pdf-view">
        <object
          data="{{ doc.path | url }}"
          type="application/pdf"
          class="pdf-frame"
          aria-label="PDF: {{ doc.label }}">
          <div class="pdf-fallback">
            Your browser can’t display this PDF inline.
            <a href="{{ doc.path | url }}">Open {{ doc.label }}</a> or
            <a href="{{ doc.path | url }}" download>download it</a>.
          </div>
        </object>

        <!-- Transparent clickable cover over the PDF -->
        <a class="pdf-cover"
           href="{{ doc.path | url }}"
           target="_blank"
           rel="noopener"
           aria-label="Open {{ doc.label }} PDF"></a>
      </div>
    </section>
  {% endfor %}
</div>
