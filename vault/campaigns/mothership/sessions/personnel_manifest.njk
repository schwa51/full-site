---
title: Personnel Manifest (PDFs)
layout: layout.njk
theme: mothership
permalink: /crew-files/
# Use site paths (what the browser sees), not local Mac paths
pdfs:
  - { path: "/assets/pdfs/LT-ADONIS-FAUCETTE.pdf",     label: "LT Adonis Faucette" }
  - { path: "/assets/pdfs/CALISTA-TEJEDA.pdf",         label: "Calista Tejeda" }
  - { path: "/assets/pdfs/CAPTAIN-LORENZO-ARGENTO.pdf",label: "CPT Lorenzo Argento" }
  - { path: "/assets/pdfs/DR-DINO-LOWMAN.pdf",         label: "Dr. Dino Lowman" }
  - { path: "/assets/pdfs/DR-MARC-PARRY.pdf",          label: "Dr. Marc Parry" }
  - { path: "/assets/pdfs/ENS-ALEX-DRAKE.pdf",         label: "Ens. Alex Drake" }
  - { path: "/assets/pdfs/IGNATZ-STEGALL.pdf",         label: "Ignatz Stegall" }
  - { path: "/assets/pdfs/KRYSTIN-SILVIA.pdf",         label: "Krystin Silvia" }
---

<style>
  /* Grid: 1 col on mobile, 2 cols on wide screens */
  .pdf-grid {
    display: grid;
    gap: 1.25rem;
    grid-template-columns: 1fr;
  }
  @media (min-width: 900px) {
    .pdf-grid { grid-template-columns: 1fr 1fr; }
  }

  .pdf-card {
    border: 1px solid #e4e4e4;
    border-radius: 12px;
    padding: 1rem;
    background: #fff;
  }

  /* Title row becomes a responsive grid: stacks on small screens */
  .pdf-title {
    display: grid;
    grid-template-columns: 1fr auto;   /* title | actions */
    align-items: center;
    gap: .75rem;
  }
  @media (max-width: 600px) {
    .pdf-title { grid-template-columns: 1fr; } /* stack title then buttons */
  }

  /* Buttons: wrap and never overlap, good touch targets */
  .pdf-actions {
    display: flex;
    flex-wrap: wrap;
    gap: .5rem;
    justify-content: flex-end;
  }
  @media (max-width: 600px) {
    .pdf-actions { justify-content: flex-start; }
  }
  .pdf-actions a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: .55rem .8rem;
    border: 1px solid #d0d0d0;
    border-radius: 10px;
    text-decoration: none;
    line-height: 1.2;
    white-space: nowrap;      /* keep each button intact */
    min-height: 44px;         /* a11y touch size */
  }

  /* Responsive PDF height: comfy on phone, roomy on desktop */
  .pdf-frame {
    width: 100%;
    height: clamp(340px, 60vh, 820px);
    border: 0;
    border-radius: 8px;
    background: #f6f6f6;
  }
  @media (max-width: 600px) {
    .pdf-frame { height: clamp(300px, 55vh, 600px); }
  }

  .pdf-fallback {
    background: #f8f8f8;
    padding: .75rem;
    border-radius: 8px;
    margin-top: .75rem;
  }
</style>

<h1>{{ title }}</h1>
<p>Open any file below. Each PDF is viewable on the page and also downloadable.</p>

<div class="pdf-grid">
  {% for doc in pdfs %}
    <section class="pdf-card">
      <div class="pdf-title">
        <h2 style="margin:0">{{ doc.label }}</h2>
        <span class="pdf-actions">
          <a href="{{ doc.path | url }}" target="_blank" rel="noopener">Open in new tab</a>
          <a href="{{ doc.path | url }}" download>Download PDF</a>
        </span>
      </div>

      {# Try to embed via <object>. If the browser can't, show a fallback link. #}
      <object data="{{ doc.path | url }}" type="application/pdf" class="pdf-frame">
        <div class="pdf-fallback">
          Your browser canâ€™t display this PDF inline.
          <a href="{{ doc.path | url }}">Open {{ doc.label }}</a> or
          <a href="{{ doc.path | url }}" download>download it</a>.
        </div>
      </object>
    </section>
  {% endfor %}
</div>
