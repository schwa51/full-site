<style>
  .pdf-grid {
    display: grid;
    gap: 1.25rem;
    grid-template-columns: 1fr;            /* 1 col on mobile */
  }
  @media (min-width: 900px) {
    .pdf-grid { grid-template-columns: 1fr 1fr; }  /* 2 cols on desktop */
  }

  .pdf-card {
    border: 1px solid #e4e4e4;
    border-radius: 12px;
    padding: 1rem;
    background: #fff;
  }

  /* Title + actions use a grid that stacks on small screens */
  .pdf-title {
    display: grid;
    grid-template-columns: 1fr auto;       /* title | actions */
    align-items: center;
    gap: .75rem;
  }
  @media (max-width: 600px) {
    .pdf-title {
      grid-template-columns: 1fr;          /* stack on mobile */
    }
  }

  /* Buttons: wrap and never overlap */
  .pdf-actions {
    display: flex;
    flex-wrap: wrap;
    gap: .5rem;
    justify-content: flex-end;
  }
  @media (max-width: 600px) {
    .pdf-actions { justify-content: flex-start; }
  }
  .pdf-actions a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: .5rem .75rem;
    border: 1px solid #d0d0d0;
    border-radius: 10px;
    text-decoration: none;
    line-height: 1.2;
    white-space: nowrap;                    /* keeps each button intact */
    min-height: 44px;                       /* touch target */
  }

  .pdf-frame {
    width: 100%;
    height: clamp(340px, 60vh, 820px);      /* responsive viewer height */
    border: 0;
    border-radius: 8px;
    background: #f6f6f6;
  }

  .pdf-fallback {
    background: #f8f8f8;
    padding: .75rem;
    border-radius: 8px;
    margin-top: .75rem;
  }
</style>

{# …inside your loop… #}
<section class="pdf-card">
  <div class="pdf-title">
    <h2 style="margin:0">{{ doc.label }}</h2>

    <span class="pdf-actions">
      <a href="{{ doc.path | url }}" target="_blank" rel="noopener">Open in new tab</a>
      <a href="{{ doc.path | url }}" download>Download PDF</a>
    </span>
  </div>

  <object
    data="{{ doc.path | url }}"
    type="application/pdf"
    class="pdf-frame"
    aria-label="PDF: {{ doc.label }}">
    <div class="pdf-fallback">
      Your browser can’t display this PDF inline.
      <a href="{{ doc.path | url }}">Open {{ doc.label }}</a> or
      <a href="{{ doc.path | url }}" download>download it</a>.
    </div>
  </object>
</section>
