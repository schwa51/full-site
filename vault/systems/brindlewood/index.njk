<h2>Cozy small-town murders with a creeping cosmic undertow.</h2>

{% set system = systemSlug or (system | slug) %}
{% set sections = ["locations","sessions","items","npcs","lore","maps","general","characters"] %}

<section class="cards">
  {% for s in sections %}
    {% set count = (collections.public_content or [])
      | where("data.systemSlug", system)
      | where("data.section", s)
      | length %}
    {% if count > 0 %}
      {% set sectionIndexUrl = "/vault/systems/" + system + "/" + s + "/" %}
      {% set hasIndex = (collections.all or []) | where("url", sectionIndexUrl) | length > 0 %}
      <article class="card">
        <h3>
          {% if hasIndex %}
            <a href="{{ sectionIndexUrl }}">{{ s | capitalize }}</a>
          {% else %}
            {{ s | capitalize }}
          {% endif %}
        </h3>
      </article>
    {% endif %}
  {% endfor %}
</section>
<pre>
filePathStem: {{ page.filePathStem }}
system (fm): {{ system or "—" }}
systemSlug (computed): {{ systemSlug or "—" }}
section (computed): {{ section or "—" }}
url: {{ page.url }}
</pre>

