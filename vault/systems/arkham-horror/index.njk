{% set systemKey = systemSlug or system %}
{% set sections = ["locations","sessions","items","npcs","lore","maps","general","characters"] %}

<section class="cards">
  {% for s in sections %}
    {% set rows = (collections.public_content or [])
      | where("data.systemSlug", systemKey)
      | where("data.section", s)
    %}
    {% set count = rows | length %}

    {% if count > 0 %}
      {% set sectionIndexUrl = "/vault/systems/" + systemKey + "/" + s + "/" %}

      {# detect if an index page exists #}
      {% set hasIndex = false %}
      {% for p in (collections.all or []) %}
        {% if p.url == sectionIndexUrl %}
          {% set hasIndex = true %}
        {% endif %}
      {% endfor %}

      <article class="card">
        <h3>
          {% if hasIndex %}
            <a href="{{ sectionIndexUrl }}">{{ s | capitalize }}</a>
          {% else %}
            {{ s | capitalize }}
          {% endif %}
        </h3>
      </article>
    {% endif %}
  {% endfor %}
</section>
