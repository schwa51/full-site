{% macro npcList(entries, heading="Non-Player Characters") %}
<section class="npc-list">
  <h2>{{ heading }}</h2>
  <ul>
    {% for entry in entries %}
      <li><a href="{{ entry.url }}">{{ entry.data.title }}</a></li>
    {% else %}
      <li><em>No NPCs found.</em></li>
    {% endfor %}
  </ul>
</section>
{% endmacro %}

