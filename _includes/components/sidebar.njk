<nav class="sidebar">
  <ul>
    {% for campaign in collections.all | eleventyNavigation %}
      {% if not campaign.parent %}
        <li>
          <a href="{{ campaign.url }}">{{ campaign.title }}</a>
          {% if campaign.children and campaign.title == page.campaign %}
            <ul>
              {% for section in campaign.children %}
                <li><a href="{{ section.url }}">{{ section.title }}</a></li>
              {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</nav>
