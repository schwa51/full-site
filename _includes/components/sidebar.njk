<nav class="sidebar">
  {% set navTree = collections.all | eleventyNavigation %}
  <ul>
    {% for campaign in navTree %}
      <li>
        <a href="{{ campaign.url }}"
           {% if page.url == campaign.url %}class="active"{% endif %}>
          {{ campaign.title }}
        </a>

        {# âœ… Use campaign.key instead of title for matching #}
        {% if campaign.children and campaign.key == page.campaign %}
          <ul>
            {% for section in campaign.children %}
              <li>
                <a href="{{ section.url }}"
                   {% if page.url == section.url %}class="active"{% endif %}>
                  {{ section.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}

      </li>
    {% endfor %}
  </ul>
</nav>
<pre>
Current campaign: {{ campaign }}
{{ page.campaign }}
</pre>
